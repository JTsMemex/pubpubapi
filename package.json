{
  "name": "pubpub-client",
  "version": "0.4.0",
  "description": "Unofficial PubPub API client for Node.js and the browser.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "lint": "tsc",
    "ci": "rm -rf dist && pnpm run build && pnpm run lint && pnpm run test",
    "prepublish": "pnpm run ci",
    "test": "vitest run",
    "dev": "vitest",
    "release": "pnpm run ci && changeset publish",
    "prepare": "husky install"
  },
  "keywords": [
    "pubpub",
    "api",
    "client",
    "client",
    "publishing"
  ],
  "author": "Thomas F. K. Jorna",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=14.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/uuid": "^3.3.0",
    "axios": "^1.3.4",
    "crypto-js": "^4.1.1",
    "firebase": "^9.19.1",
    "form-data": "^4.0.0",
    "prosemirror-compress-pubpub": "0.0.3",
    "prosemirror-model": "^1.18.2",
    "prosemirror-state": "^1.4.2",
    "prosemirror-tables": "^1.3.2",
    "prosemirror-transform": "^1.2.5",
    "prosemirror-view": "^1.29.0",
    "uuid": "^3.3.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/node": "^18.15.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "svelte": "^3.57.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2",
    "zod": "^3.21.4"
  }
}
